<Window x:Class="WpfHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHelloWorld"
        mc:Ignorable="d"
        Title="My First GUI" Height="450" Width="800">
<!-- XAML -> Extensible Application Markup Language-->
    <Grid>
        <Button>
            <Button.Content>
                <WrapPanel>
                    <TextBlock Foreground="Blue" FontSize="25">Multi</TextBlock>
                    <TextBlock Foreground="Red" FontSize="25">Colour</TextBlock>
                    <TextBlock Foreground="Green" FontSize="25">Button</TextBlock>
                </WrapPanel>
            </Button.Content>
            <Button.Height>50</Button.Height>
            <Button.Width>250</Button.Width>
        </Button>
    </Grid>
</Window>
