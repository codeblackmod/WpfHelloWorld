<Window x:Class="WpfHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHelloWorld"
        mc:Ignorable="d"
        Title="My First GUI" Height="450" Width="800">
<!-- XAML -> Extensible Application Markup Language-->
    <StackPanel>
        <!-- Direct event-->
        <Button Content="Click Me" Click="Button_Click" Height="25" Width="100" Margin="20"/>
        
        <!-- Don't work with the left click - Bubbling event-->
        <Button Content="Click Me (only right click works)" MouseUp="Button_MouseUp" Height="25" Width="200"/>
        
        <!-- Rebuild that it works also with left click - Tunneling event-->
        <Button Content="Click Me (both works)" PreviewMouseUp="Button_PreviewMouseUp" Height="25" Width="150" Margin="20"/>
    </StackPanel>
</Window>
